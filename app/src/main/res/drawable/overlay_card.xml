<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Couche de fond transparente pour voir à travers -->
    <item>
        <shape android:shape="rectangle">
            <solid android:color="#22000000"/> <!-- Couleur sombre semi-transparente pour l'extérieur -->
        </shape>
    </item>
    <!-- Couche du carré transparent avec bordure blanche -->
    <item android:left="100dp" android:top="150dp" android:right="100dp" android:bottom="200dp">
        <shape android:shape="rectangle">
            <stroke android:width="3dp" android:color="@android:color/white"/> <!-- Bordure blanche -->
            <solid android:color="#00000000"/> <!-- Intérieur transparent -->
        </shape>
    </item>
</layer-list>
